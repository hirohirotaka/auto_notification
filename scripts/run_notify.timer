# systemd timer to run run_notify.service every minute
# Copy to /etc/systemd/system/run_notify.timer and enable+start it:
# sudo systemctl daemon-reload
# sudo systemctl enable --now run_notify.timer

[Unit]
Description=Run auto_notification runner every minute

[Timer]
OnBootSec=1min
OnUnitActiveSec=1min
Unit=run_notify.service
Persistent=true

[Install]
WantedBy=timers.target
